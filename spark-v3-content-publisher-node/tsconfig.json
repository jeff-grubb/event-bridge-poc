{
  "compilerOptions": {
    "target": "es2020",
    "module":"commonjs",
    "moduleResolution":"node",
    "preserveConstEnums": true,
    "noEmit": false,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__mocks__/*",
    "__tests__/*",
    "**/__tests__/*",
  ]
}
